#include <iostream>
using namespace std;

class Writer {
public:
    string name;
    Writer(string n) : name(n) {
        cout << "Writer created\n";
    }
};

class Poet : virtual public Writer {
public:
    Poet(string n) : Writer(n) {
        cout << "Poet created\n";
    }
};

class Novelist : virtual public Writer {
public:
    Novelist(string n) : Writer(n) {
        cout << "Novelist created\n";
    }
};

class Author : public Poet, public Novelist {
public:
    Author(string n) : Writer(n), Poet(n), Novelist(n) {
        cout << "Author created\n";
    }

    void showName() {
        cout << "Author's name: " << name << endl;
    }
};

int main() {
    Author a("Emily Dickinson");
    a.showName();
    return 0;
}
